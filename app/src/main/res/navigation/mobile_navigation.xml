<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.dennytech.datacapture.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_add_form"
            app:destination="@id/navigation_add_form" />
    </fragment>

    <fragment
        android:id="@+id/navigation_data"
        android:name="com.dennytech.datacapture.ui.captures.CapturesFragment"
        android:label="@string/title_captures"
        tools:layout="@layout/fragment_captures" />

    <fragment
        android:id="@+id/navigation_add_form"
        android:name="com.dennytech.datacapture.ui.add_form.AddFormFragment"
        android:label="@string/title_add_form"
        tools:layout="@layout/fragment_add_form" />
</navigation>